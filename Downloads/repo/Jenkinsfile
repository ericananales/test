pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/ericananales/test.git'  // Make sure to replace this with the actual repo URL
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'  // Replace with 'npm install' or 'python setup.py' if using other technologies
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'  // Replace with the appropriate test command
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Add deployment scripts here
            }
        }
    }
}
